@model TP3.Models.ConcertViewModel
<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Add Concert</div>
    <div class="panel-body">
        <form asp-action="AddConcert" role="form">
            <div class="form-horizontal">
                <div class="form-group">
                    <label asp-for="ConcertName" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-3 col-sm-6">
                        <input asp-for="ConcertName" class="form-control" />
                    </div>
                </div>
                
                <div class="form-group">
                    <label asp-for="ConcertDescription" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-3 col-sm-6">
                        <input asp-for="ConcertDescription" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Date" class="col-lg-3 col-sm-3 control-label"></label>
                    <div class="col-lg-3 col-sm-6">
                        <input asp-for="Date" class="form-control" />
                    </div>
                </div>
                <div class="col-lg-6 col-sm-8 pull-right">
                    <button id="btnCancel" class="btn btn-default" type="button">Cancel</button>
                    <button class="btn btn-success" id="btn" type="submit">Submit</button>
                </div>
            </div>
        </form>
    </div>
</div>